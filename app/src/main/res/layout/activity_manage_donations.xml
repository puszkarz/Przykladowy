<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/se">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MDL_but_pickDonationType"
        android:text="@string/but_pickDonationType_label"
        android:onClick="onClick_showPopUpDonationsTypes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/MDL_f_addVolume"
        android:layout_alignEnd="@+id/MDL_but_pickDate"
        android:layout_alignStart="@+id/MDL_but_pickDate"
        android:layout_below="@+id/MDL_but_pickDonationType" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_pickDate_label"
        android:id="@+id/MDL_but_pickDate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/MDL_f_addVolume" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_pickStation_label"
        android:id="@+id/MDL_but_pickStation"
        android:onClick="onClick_pickStation"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/MDL_but_pickDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_addDonation_label"
        android:id="@+id/MDL_but_addDonation"
        android:onClick="onClick_addDonation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/MDL_but_pickStation" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/volume_label"
        android:id="@+id/MDL_fDesc_Volume"
        android:layout_alignBottom="@+id/MDL_f_addVolume"
        android:layout_toStartOf="@+id/MDL_f_addVolume"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="7dp" />

</RelativeLayout>