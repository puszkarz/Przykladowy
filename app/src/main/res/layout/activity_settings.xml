<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/MUL_updateNick"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_updateNick_label"
        android:id="@+id/but_updateNick"
        android:onClick="onClick_UpdateNick"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_updateBloodType_label"
        android:id="@+id/but_updateBloodType"
        android:layout_marginTop="65dp"
        android:onClick="onClick_showUpdatePopUpBloodTypes"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_delUser_label"
        android:id="@+id/but_delUser"
        android:onClick="onClick_deleteUser"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>